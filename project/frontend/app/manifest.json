{
  // Required
  "manifest_version": 2,
  "name": "Kopernik's Wonder Woman Initiative",
  "version": "0.0.1",

  // Recommended
  "description": "This extension is intended to enable offline data capture in remote regions of Indonesia with online sync.",
  "icons": { "16": "/favicon.ico",
    "48": "/favicon.ico",
    "128": "/favicon.ico" },

  // Pick one (or none)
  "browser_action": {
    "default_icon": {                    // optional
      "19": "/favicon.ico",           // optional Must be PNG
      "38": "/favicon.ico"            // optional Must be PNG
      //Badge: Set the text and color of the badge using browserAction.setBadgeText and browserAction.setBadgeBackgroundColor,
    },
    "default_title": "Kopernik"
  },

  // Optional
  "author": "FCC",
  "background": {
    "page": "main.html"
  },
  "web_accessible_resources": [
    "scripts/main.js",
    "scripts/jquery-1.11.2.min.js",
    "scripts/network.js",
    "scripts/temp.js"
  ],
  "offline_enabled": true,
  "content_security_policy": "script-src 'self' http://localhost:8080; object-src 'self'",
  "optional_permissions": ["tabs"],
  "permissions": [
    "tabs",
    "unlimitedStorage",
    "background",
    "storage"
  ]

}
